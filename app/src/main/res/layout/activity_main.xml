<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.example.android.jamaledd_countbook.CountBookActivity">

    <ListView
        android:id="@+id/count_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/layout2"
        android:scrollbars="vertical">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/count_tracker"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:background="@drawable/layout2"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="Counts listed: 0"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/add_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/layout"
            android:fontFamily="sans-serif"
            android:text="Add"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>